<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block rounded-md outline-none w-full px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="Title Goes here"
            name="title"
          />
          <textarea
            class="block rounded-md outline-none w-full mt-2 px-5 py-2 resize-none bg-zinc-800"
            placeholder="Write your tasks details"
            name="details"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
            type="submit"
            value="Create Tasks"
          />
        </form>
      </div>
      <div class="tasks p-10 flex gap-3 flex-wrap">
        <% if (files.length > 0) { %>
          <% files.forEach(function (val) { %>
            <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
              <h1 class="text-white text-3xl tracking-tighter">
                <%= val %>
              </h1>
              <a class="text-blue-500 inline-mt-3" href="/files/<%= val %>">Read More.</a>
            </div>
          <% }); %>
        <% } else { %>
          <h3 class="text-zinc-600">no task yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
