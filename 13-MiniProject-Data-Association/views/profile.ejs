<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-6">
        <div class=" w-full flex justify-end items-end">
            <a class="bg-red-500 rounded-md text-5 inline-block mb-5 px-3 py-2 " href="/logout">Logout</a>

        </div>
        <h3 class="text-3xl">Hello , <%= user.name %></h3>
        <h5 class="mb-5">You can create a post.</h5>
        <form method="post" action="/post">
            <textarea placeholder="What's on your mind?" class="w-1/3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"></textarea>
            <input class="px-3 w-740 py-2 bg-blue-500 block rounded-md mt-2" type="submit" value="Create New Post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Post.</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function (post) { %>
                    <div class="post w-1/3 p-5 mb-2 border-2 rounded-md bg-zinc-800 border-zinc-700">
                        <h4 class="text-blue-500 mb-4"><%= user.username %></h4>
                        <p class="tracking-tight text-sm"><%= post.content %></p>
                        <div class="btns flex gap-3 mt-5">
                            <a class="text-blue-500" href="">Like</a>
                            <a href="text-zinc-600">edit</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>